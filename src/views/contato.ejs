<%- include('includes/head') %>
  <%- include('includes/nav') %>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Contato</h1>
          <p class="text-center lead">Crie ou edite seu contato abaixo.</p>
          <%- include('includes/messages') %>

            <% if (contato._id) { %>
              <form action="/contato/edit/<%= contato._id %>" class="form-edit" method="POST">
                <% } else { %>
                  <form action="/contato/register" class="form-register" method="POST">
                    <% } %>
                      <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                      <div class="form-group my-4">
                        <label>Nome</label>
                        <input type="text" value="<%= contato.nome %>" class="form-control"
                          placeholder="Digite seu email" name="nome">
                      </div>
                      <div class="form-group my-4">
                        <label>Sobrenome</label>
                        <input type="text" value="<%= contato.sobrenome %>" class="form-control"
                          placeholder="Digite seu email" name="sobrenome">
                      </div>
                      <div class="form-group my-4">
                        <label>E-mail</label>
                        <input type="email" value="<%= contato.email %>" class="form-control"
                          placeholder="Digite seu email" name="email">
                      </div>
                      <div class="form-group my-4">
                        <label>Telefone</label>
                        <input type="tel" value="<%= contato.tel %>" class="form-control" placeholder="Digite seu email"
                          name="tel">
                      </div>

                      <button type="submit" class="btn btn-primary">Salvar</button>
                  </form>

        </div>

        <div class="col-lg-2"></div>

      </div>
    </div>
    <%- include('includes/footer') %>